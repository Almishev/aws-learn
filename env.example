# Radio Playlist Management System - Environment Configuration
# Копирай този файл като .env и попълни стойностите

# AWS Configuration
AWS_REGION=eu-central-1
AWS_ACCOUNT_ID=

# Development Settings
NODE_ENV=development
CDK_DEFAULT_ACCOUNT=
CDK_DEFAULT_REGION=eu-central-1

# Application Configuration
RADIO_API_NAME=Radio Playlist API
RADIO_API_DESCRIPTION=API за управление на плейлист за DJ Boyko

# DynamoDB Configuration
DYNAMODB_TABLE_NAME=radio-songs
DYNAMODB_BILLING_MODE=PAY_PER_REQUEST

# S3 Configuration
S3_BUCKET_NAME=radio-cover-images
S3_AUTO_DELETE_OBJECTS=true

# SNS Configuration
SNS_TOPIC_NAME=radio-notifications
SNS_DISPLAY_NAME=Radio Playlist Notifications

# Lambda Configuration
LAMBDA_RUNTIME=nodejs18.x
LAMBDA_TIMEOUT=30
LAMBDA_MEMORY_SIZE=128

# EventBridge Configuration
EVENTBRIDGE_SCHEDULE=rate(1 minute)

# Email Configuration (за бъдещи разширения)
DJ_EMAIL=boyko@radio.com
NOTIFICATION_EMAIL=notifications@radio.com

# Cost Estimation (за документация)
# Очаквани разходи за 3,000,000 заявки/месец:
# - DynamoDB: ~$50-100/месец
# - Lambda: ~$20-30/месец  
# - API Gateway: ~$10-20/месец
# - S3: ~$5-10/месец
# - SNS: ~$1-2/месец
# Общо: ~$86-162/месец 